<h1>Courses</h1>
<%= form_tag(courses_all_courses_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Courses..." %>
  <%= submit_tag "Search", :name => nil %>
<% end %>
<hr>
<%= link_to "Edit All", courses_edit_all_path %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Tag</th>
      <th>Name</th>
      <th># Sections</th>
      <th>Department</th>
      <th>Description</th>
      <th>Credits</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.order('name asc').each do |course| %>
      <tr>
        <td><%= course.course_number %></td>
        <td><%= course.department.department_tag %></td>
        <td><%= link_to course.name, course %></td>
        <td><%= course.sections.count %></td>
        <td><%= link_to course.department.name, course.department %></td>
        <td><%= course.description %></td>
        <td><%= course.credits %></td>
        <td><% if course.average_rating.presence %>
          <%= course.average_rating %>
          <% end %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Course', new_course_path %>