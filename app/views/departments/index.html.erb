<h1>Departments</h1>
<hr>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Department tag</th>
      <th>Name</th>
      <th>Description</th>
      <th>Majors</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.department_tag %></td>
        <td><%= link_to department.name, department %></td>
        <td><%= department.description %></td>
        <td><%= link_to department.majors.count, department_majors_path(department) %></td>
        <td><%= link_to 'Show', department %></td>
        <td><%= link_to 'Edit', edit_department_path(department) %></td>
        <td><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Department', new_department_path %>
