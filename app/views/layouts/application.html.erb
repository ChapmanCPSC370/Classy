<!DOCTYPE html>
<html>
<head>
  <title>Classy</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
</head>
<body>

<div class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to root_path, class: "navbar-brand" do %>
          <i style="text-shadow: 1px 1px 0px #fff, 2px 2px 0px rgba(0, 0, 0, 0.15);" class="text-primary fa fa-graduation-cap "></i>
             Classy
          <% end %>
        </div>
        <div class="collapse navbar-collapse">
          <% if user_signed_in? %>
            <ul class="nav navbar-nav">
              <li>
                <%= link_to "Profile", current_user %>
              </li>
              <% if current_user.bAmbassador %>
                <li>
                <%= link_to "Schools", universities_path %>
              </li>
              <li>
                <%= link_to "Departments", departments_path %>
            </li>
              <li>
                <%= link_to "Majors", majors_path %>
            </li>
              <li>
                <%= link_to "Courses", courses_all_courses_path %>
              </li>
              <li>
                <%= link_to "Sections", sections_search_sections_path %>
            </li>
              <li>
                <%= link_to "Friends", users_path %>
              </li>
              <% end %>
          </ul>
            
            <ul class="nav navbar-nav navbar-right">
              <li>
							<%= link_to  logout_path, :method => :delete do %>Log out <i class="fa fa-sign-out"></i> <% end %>
						</li>
              <% if current_user.bAmbassador %>
              <form class="navbar-form navbar-left">
                <%= link_to users_path, class: 'btn btn-primary navbar-' do %><i class="fa fa-key"></i> Ambassador Panel<% end %>
              </form>
              <% end %>
          </ul>
          <% else %>
          <ul class="nav navbar-nav">
            <li>
              <%= link_to "Home", root_path, class: "" %>
            </li>
            <li>
              <%= link_to "About", static_pages_about_path, class: "" %>
            </li>
            <li>
              <%= link_to "Search", sections_search_sections_path %>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <form class="navbar-form navbar-right">
              <%= link_to "Sign In", new_user_session_path, class: "btn btn-primary" %>
            </form>

            <li>
              <%= link_to "Sign Up", new_user_registration_path, class: "" %>
            </li>
          </ul>
          <% end %>
				
				 </div><!--/.nav-collapse -->
    </div>
    </div>

    <div class="container">
      
  
<%= yield %>
      </div>
</body>
</html>
