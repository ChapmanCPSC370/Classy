<h1>Listing majors</h1>

<table>
  <thead>
    <tr>
      <th>University</th>
      <th>Name</th>
      <th>Description</th>
      <th>Department</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @majors.each do |major| %>
      <tr>
        <td><%= major.university_id %></td>
        <td><%= major.name %></td>
        <td><%= major.description %></td>
        <td><%= major.department_id %></td>
        <td><%= link_to 'Show', major %></td>
        <td><%= link_to 'Edit', edit_major_path(major) %></td>
        <td><%= link_to 'Destroy', major, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

