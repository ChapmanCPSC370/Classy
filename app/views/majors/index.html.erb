<h1>Majors</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>University</th>
      <th>Name</th>
      <th>Description</th>
      <th>Department</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @majors.each do |major| %>
      <tr>
        <td><%= link_to University.find(major.university_id).name, University.find(major.university_id) %></td>
        <td><%= link_to major.name, major %></td>
        <td><%= major.description %></td>
        <td><%= link_to major.department.name, major.department %></td>
        <td><%= link_to 'Show', major %></td>
        <td><%= link_to 'Edit', edit_major_path(major) %></td>
        <td><%= link_to 'Destroy', major, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

