<h1>Listing school_requests</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>School name</th>
      <th>Number requests</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @school_requests.each do |school_request| %>
      <tr>
        <td><%= school_request.user_id %></td>
        <td><%= school_request.school_name %></td>
        <td><%= school_request.number_requests %></td>
        <td><%= link_to 'Show', school_request %></td>
        <td><%= link_to 'Edit', edit_school_request_path(school_request) %></td>
        <td><%= link_to 'Destroy', school_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

