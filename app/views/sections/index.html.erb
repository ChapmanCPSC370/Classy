<h1>Listing sections for <%= @course.name %></h1>
<%= @course.description %>

<%= form_for [@course, Section.new], url: {controller: :sections, course_id: @course.id } do |f| %>
  <%= f.hidden_field :course_id %>
  <%= f.hidden_field :name, value: @course.name %><p>
<%= f.label :term %>
<%= f.text_field :term %></p><p>
<%= f.label :teacher %>
<%= f.text_field :teacher %></p><p>
<%= f.label :room %>
<%= f.text_field :room %></p><p>
<%= f.label :schedule %>
<%= f.text_field :schedule %></p><p>
  <%= f.submit %>
</p>
<% end %>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Term</th>
      <th>Teacher</th>
      <th>Schedule</th>
      <th>Room</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.course_id %></td>
        <td><%= section.term %></td>
        <td><%= section.teacher %></td>
        <td><%= section.schedule %></td>
        <td><%= section.room %></td>
        <td><%= link_to 'Show', section %></td>
        <td><%= link_to 'Edit', edit_section_path(section) %></td>
        <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

