<p id="notice"><%= notice %></p>

<h1><%= @section.course.name %></h1>
<hr>


<% if user_signed_in? && current_user.badmin %>
<%= link_to 'Edit', edit_section_path(@section) %>
<% end %>
<h4>
  <span class="label label-primary"><%= @section.course.credits %> Credits</span>
  <span class="label label-success"><%= @section.term %></span>
  <span class="label label-success">Professor <%= @section.teacher %></span>
  <span class="label label-success"><%= @section.schedule %></span>
  <span class="label label-success"><%= @section.room %></span>
  <span class="label label-default"><%= link_to section_students_path(@section) do %>Students: <%= @section.enrollments.count %><% end %></span>
</h4>
<hr>
<ul class="nav nav-pills nav-justified">
  <li><%= link_to @section do %><h4><i class="fa fa-building fa-2x"></i><br>Assignments</h4><% end %></li>
  <li><%= link_to @section do %><h4><i class="fa fa-flask fa-2x"></i><br>Materials &amp; Minors</h4><% end %></li>
  <li><%= link_to @section do %><h4><i class="fa fa-list fa-2x"></i><br>Courses</h4><% end %></li>
  <li><%= link_to @section do %><h4><i class="fa fa-group fa-2x"></i><br>Students</h4><% end %></li>
</ul>
<div class="row">
  <div class="col-md-6">
  <% if user_signed_in? && current_user.enrolled?(@section) %>
<%= form_for [current_user, Enrollment.new], html: { method: :delete } do |f| %>
<%= f.hidden_field :user_id, value: current_user.id %>
<%= f.hidden_field :section_id, value: @section.id %>
<%= f.submit "Drop!", class: "btn btn-default" %>
<% end %>
  <% else %>
<% if user_signed_in? &&  %>
    <%= form_for [current_user, Enrollment.new] do |f| %>
<%= f.hidden_field :user_id, value: current_user.id %>
<%= f.hidden_field :section_id, value: @section.id %>
<%= f.submit "Enroll!", class: "btn btn-default" %>
<% end %>
<% end %>
  <% end %> 

<div class="">
  <h2>Assignments</h2>
  <% @section.assignments.order("duedate desc").each do |f| %><div class="well"><h4>
    <%= link_to f.name, f %>
    <span class="label label-default"><%= f.points %> Points</span>
    <span class="label label-default">Due <%= f.duedate.to_date %></span>
    </h4><h5><%= f.description %>
    </h5></div>
  <% end %>
  <%= form_for [@section, Assignment.new] do |f| %>
  <%= f.hidden_field :section_id, value: @section.id %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :points %>
  <%= f.text_field :points %>
  <%= f.label :duedate %>
  <%= f.date_select :duedate %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.submit %>
  <% end %>
</div>
<div class="well">
  <h2>Learning Materials</h2>
</div>