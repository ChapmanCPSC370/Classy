<p id="notice"><%= notice %></p>
<div class="col-md-6">
<%= image_tag @user.imageurl, width: 100 %> 
  
 
  <%= link_to "Friend", edit_user_registration_path(@user), class: "pull-right btn btn-primary" %> 
  <%= link_to "Edit Profile", edit_user_registration_path(@user), class: "pull-right btn btn-default" %>
  <% if  @user.first_name.presence %>
<h1><%= @user.first_name %> <%= @user.last_name %></h1>
  <h3><%= @user.major.name %> (<%= @user.major.total_credits %> credits), <% if @user.minor.presence %> Minor in <%= @user.minor %><% end %></h3>
  <% end %>
</div>


<div class="col-md-6 panel panel-primary">
  
  <% if  @user.major.presence %>
  <div class="progress">
      <div class="progress-bar " role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%= Integer(6.0/@user.major.total_credits * 100) %>%;">
        <span class="sr-onl">Credits fulfilled 6/<%= @user.major.total_credits %></span>
      </div>
    </div>
  <% end %>
  <div class="panel-heading">
    
<h5>Current schedule</h5>
  </div>
  <div class="panel-body">
<% @user.enrollments.each do |f| %><p>
    <% if Section.exists?(f.section_id) %>
    <%= link_to f.section.course.name, f.section %>
    <% end %>
    </p>
<% end %>
  </div>
</div>

<div id='calendarr'></div>
<script>$('#calendar').fullCalendar({
			header: {
				left: 'prev,next today',
				center: 'title',
				right: 'month,basicWeek,basicDay'
			},defaultDate: '2014-09-12',
  defaultView: 'agendaWeek',
			editable: false,
			eventLimit: true, // allow "more" link when too many events
			events: '/sections.json'
		});</script>
