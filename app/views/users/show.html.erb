<p id="notice"><%= notice %></p>


<div class="col-md-6 panel panel-primary"><div class="panel-body">
  <center><p>
  <%= image_tag @user.imageurl, width: 240 %><br>
    <br>
  
    <% if @user == current_user %>
    <%= link_to "Edit Profile", edit_user_registration_path(@user) %>
    <% else %>
    <%= link_to "Add Friend", edit_user_registration_path(@user) %>
    <% end %>
  <% if  @user.first_name.presence %>
<h1><%= @user.first_name %> <%= @user.last_name %></h1>
  <% if  @user.major.presence %>
  <div class="progress">
      <div class="progress-bar " role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%= Integer(6.0/@user.major.total_credits * 100) %>%;">
        <span class="sr-onl">Credits fulfilled 6/<%= @user.major.total_credits %></span>
      </div>
    </div>
  <% end %>
    </p>
<h3>Fall 2014 Schedule</h3>
  </center>
<% @user.enrollments.each do |f| %>
    <p>
    <% if Section.exists?(f.section_id) %>
      <%= link_to f.section.course.full_name, f.section %> with <%= f.section.teacher %> at <%= f.section.schedule %>
    <% end %>
    </p>
<% end %>
  </div>
</div>

<div class="col-md-6">
  <div class="well">

  <h3><% if @user.major.presence %>Pursuing <%= link_to @user.major.name, @user.major %> (<%= @user.major.total_credits %> credits) <% if @user.minor.presence %>, Minor in <%= @user.minor %><% end %></h3>
  <% end %>
  
    <% @user.major.degree_requirements.each do |f| %>
    <p>
      <%= link_to f.course.full_name, f.course %>
        <% @user.enrollments.each do |g| %> 
          <% if g.section.course.id == f.course.id %>
            <span class="label label-success">Currently Enrolled</span>
        <% end %>
      <% end %>
    </p>
  <% end %>
</div>
<% end %>
<div id='calendarr'></div>
<script>$('#calendar').fullCalendar({
			header: {
				left: 'prev,next today',
				center: 'title',
				right: 'month,basicWeek,basicDay'
			},defaultDate: '2014-09-12',
  defaultView: 'agendaWeek',
			editable: false,
			eventLimit: true, // allow "more" link when too many events
			events: '/sections.json'
		});</script>
